<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml"
		 width="100%">

	<mx:HBox width="100%"
			 verticalAlign="bottom">

		<mx:Label text="{label}"/>

		<mx:Label text="{note}"
				  visible="{note}"
				  color="#777777"
				  fontWeight="normal"/>

	</mx:HBox>

	<mx:HRule width="100%"
			  styleName="pageTitleHrule"/>

	<mx:String id="note"/>

</mx:VBox>
